<div class="container">


<% if @document.present? %>
	<table border="1" class="table table-bordered">
		<tr>
			<th>ID</th>
			<th>File Name</th>
			<th>File Type</th>
		</tr>

		<% @document.each do |document| %>
			<tr>
				<td><%= document.id %></td>
				<td><%= document.name %></td>
				<td><%= document.type %></td>
			</tr>

		<% end %>
	</table>
<% end %>	

<%= form_tag({action: :upload}, multipart: true) do %>
  <%= file_field_tag 'file' %>
  <%= submit_tag "Upload", class: "btn btn-primary" %> <br/>
<% end %>



</div>

