<div class="container">
<%= form_tag({action: :upload}, multipart: true) do %>
  <%= file_field_tag 'file' %>
  <%= submit_tag "Upload", class: "btn btn-primary" %> <br/>
<% end %>

<% if @document.present? %>
	<table border="1" class="table table-bordered">
		<tr>
			<!-- <th>ID</th> -->
			<th>Document Name</th>
			<th>File Type</th>
			<th>Content</th>
		</tr>

		<% @document.each do |document| %>
			<tr>
				<!-- <td><%= document.id %></td> -->
				<td><%= document.name %></td>
				<td><%= document.type %></td>
				<td><%= link_to "Check it", content_path(document.id) %></td>
			</tr>

		<% end %>
	</table>
<% end %>	


</div>

